<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_pengumuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:paddingBottom="5dp"
            android:id="@+id/rlt1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/llbw1"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tanggalpengumuman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Tanggal : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tanggaltopik"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:text="Tanggal Pengumuman"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlbw1"
                android:layout_below="@+id/llbw1">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:id="@+id/lv1"
                    android:background="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lv1"
                    android:text="Topik Perwalian"
                    android:textStyle="bold|italic"
                    android:textSize="14dp"
                    android:id="@+id/txpp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idtopik"
                    android:visibility="invisible"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:id="@+id/lv2"
                    android:background="#000000"
                    android:layout_below="@+id/txpp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/llbw2"
                android:layout_below="@+id/rlbw1">

                <TextView
                    android:id="@+id/topiknya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Topik"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#448AFF"
                    android:layout_below="@+id/tanggalpengumuman"/>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>