<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE">

            <ImageView
                android:id="@+id/gambar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_dosen"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/namadosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gambar"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Nama Dosen"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/niydosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namadosen"
                android:layout_toRightOf="@+id/gambar"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="NIY Dosen : "
                android:textColor="#448AFF" />

            <TextView
                android:id="@+id/niynya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/niydosen"
                android:layout_alignBottom="@+id/niydosen"
                android:layout_marginStart="86dp"
                android:layout_toEndOf="@+id/gambar"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="NIY"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/nipdosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/niydosen"
                android:layout_below="@+id/niydosen"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="NIP Dosen : "
                android:textColor="#448AFF" />

            <TextView
                android:id="@+id/nipnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/nipdosen"
                android:layout_alignBottom="@+id/nipdosen"
                android:layout_alignStart="@+id/niynya"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="NIP"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/nidndosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="NIDN Dosen : "
                android:textColor="#448AFF"
                android:layout_below="@+id/nipdosen"
                android:layout_alignStart="@+id/nipdosen" />

            <TextView
                android:id="@+id/nidnnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="NIDN"
                android:textColor="@color/colorPrimary"
                android:layout_alignBaseline="@+id/nidndosen"
                android:layout_alignBottom="@+id/nidndosen"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/nipnya" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>