<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_pengumuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:id="@+id/llpp1"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingLeft="10dp"
                    android:text="Matakuliah"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/matkulps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="isi Matakuliah"
                    android:textColor="#448AFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:id="@+id/llpp2"
                android:layout_below="@+id/llpp1"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingLeft="10dp"
                    android:text="Kelas"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/kelaspp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kelas"
                    android:textColor="#448AFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/llpp3"
                android:layout_below="@+id/llpp2"
                android:paddingTop="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingLeft="10dp"
                    android:text="Hari"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/haripp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hari"
                    android:textColor="#448AFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:id="@+id/llpp4"
                android:layout_below="@+id/llpp3"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingLeft="10dp"
                    android:text="Jam"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/jampp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jam"
                    android:textColor="#448AFF" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlbw1"
                android:paddingTop="10dp"
                android:layout_below="@+id/llpp4">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:id="@+id/lv1"
                    android:background="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lv1"
                    android:text="Pengumuman"
                    android:textStyle="bold|italic"
                    android:textSize="14dp"
                    android:id="@+id/txpp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:id="@+id/lv2"
                    android:background="#000000"
                    android:layout_below="@+id/txpp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:id="@+id/llpp5"
                android:layout_below="@+id/rlbw1">

                <TextView
                    android:id="@+id/infopp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi"
                    android:textColor="#448AFF" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>