<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="18dp"
    tools:context="id.ac.uad.android.jamal.uadapp.perwalian.TranskipNilai">

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:id="@+id/lineview1"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineview1"
        android:weightSum="4"
        android:id="@+id/inill"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_weight="1"
            android:text="Kode"
            android:id="@+id/kode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="0.6"
            android:id="@+id/matakuliah"
            android:text="Mata Kuliah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1.2"
            android:text="Sks"
            android:id="@+id/sks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1.2"
            android:text="Nilai"
            android:id="@+id/nilai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:id="@+id/lineview2"
        android:layout_below="@+id/inill"
        android:background="#000000"/>

    <ListView
        android:layout_below="@+id/lineview2"
        android:id="@+id/listranskip"
        android:layout_width="match_parent"
        android:layout_height="480dp">
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/listranskip"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ipk"
            android:text="Indeks Prestasi Komulatif (IPK) : "
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPKNYA"
            android:id="@+id/ipknya"
            android:textColor="#000000"
            android:paddingLeft="5dp"/>
    </LinearLayout>

</RelativeLayout>
